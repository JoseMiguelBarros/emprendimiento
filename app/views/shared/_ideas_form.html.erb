<%= form_for(@idea) do |f| %>
    <%= render 'shared/error_messages', object: f.object %>
    <div class="field">
      <%= f.text_area :content, placeholder: "Compose new idea..." %>
    </div>  
        
        <%= hidden_field_tag  'brand_id', params[:id] %>
    <%= f.submit "Post", class: "btn btn-large btn-primary" %>
<% end %>
