<% provide(:title, 'Create Brand') %>
<h1>Add a new Brand</h1>
<div class="row">
  <div class="span6 offset3">
    <%= form_for(@brand, :html => {:multipart => true}) do |f| %>
        <%= render 'shared/error_messages', object: f.object %>

        <%= f.label :name %>
        <%= f.text_field :name %>

        <%= f.label :description %>
        <%= f.text_field :description %>

	<%= f.label :image %>
        <%= f.file_field :description %>

        <%= f.submit "Add Brand", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>
